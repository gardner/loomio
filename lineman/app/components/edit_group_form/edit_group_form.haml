.edit-group-form
  %form{ng-submit: 'submit()',  ng-disabled: 'group.processing', name: 'groupForm' }
    .lmo-disabled-form{ng-show: 'isDisabled'}
    .modal-header
      %button{type: 'button', class: 'close', ng-click: '$close()'}
        %span{aria-hidden: 'true'} &times;
        %span.sr-only{translate: 'common.action.cancel'}
      %h1.lmo-h1{translate: 'edit_group_form.title'}

    .modal-body

      .edit-group-form__basic-settings
        .edit-group-form__name
          %label{for: 'group-name', translate: 'edit_group_form.basic_settings.name'}
          %input.edit-group-form__name.form-control#group-name{ng-required: true, ng-model: 'group.name', maxlength: '255'}
          %validation_errors{subject: 'group', field: 'name'}

        .edit-group-form__description
          %label{for: 'group-description', translate: 'edit_group_form.basic_settings.description'}
          %textarea.edit-group-form__description.form-control#group-description{msd-elastic: 'true', ng-model: 'group.description'}

        .edit-group-form__privacy
          %label{for: 'group-privacy', translate: 'edit_group_form.basic_settings.group_privacy'}
          .edit-group-form__radio-list-item
            %label
              %input{type: 'radio', ng-model: 'group.groupPrivacy', value: 'open', name: 'groupPrivacy'}
              %span{translate: 'edit_group_form.basic_settings.open_visibility'}
          .edit-group-form__radio-list-item
            %label
              %input{type: 'radio', ng-model: 'group.groupPrivacy', value: 'closed', name: 'groupPrivacy'}
              %span{translate: 'edit_group_form.basic_settings.closed_visibility'}
          .edit-group-form__radio-list-item
            %label
              %input{type: 'radio', ng-model: 'group.groupPrivacy', value: 'private', name: 'groupPrivacy'}
              %span{translate: 'edit_group_form.basic_settings.private_visibility'}

      %button.lmo-link.edit-group-form__advanced-link{type: 'button', ng-show: '!expanded', ng-click: 'expandForm()', translate: 'edit_group_form.advanced_settings.link_label'}

      .edit-group-form__advanced{ng-show: 'expanded'}

        .edit-group-form__thread-privacy
          %label{for: 'group-discussion-privacy-options', translate: 'edit_group_form.advanced_settings.thread_privacy'}
          .edit-group-form__public-option{ng-if: 'group.groupPrivacy == "open"'}
            %span{translate: 'edit_group_form.advanced_settings.public_threads'}

          .edit-group-form__closed-options{ng-if: 'group.groupPrivacy == "closed"'}
            .edit-group-form__radio-list-item
              %label
                %input{type: 'radio', ng-model: 'group.discussionPrivacyOptions', value: 'public_only', name: 'discussion-privacy-options'}
                %span{translate: 'edit_group_form.advanced_settings.public_threads'}
            .edit-group-form__radio-list-item
              %label
                %input{type: 'radio', ng-model: 'group.discussionPrivacyOptions', value: 'public_or_private', name: 'discussion-privacy-options'}
                %span{translate: 'edit_group_form.advanced_settings.public_or_private_threads'}
            .edit-group-form__radio-list-item
              %label
                %input{type: 'radio', ng-model: 'group.discussionPrivacyOptions', value: 'private_only', name: 'discussion-privacy-options'}
                %span{translate: 'edit_group_form.advanced_settings.private_threads'}

          .edit-group-form__private-option{ng-if: 'group.groupPrivacy == "private"'}
            %span{translate: 'edit_group_form.advanced_settings.private_threads'}

        .edit-group-form__permissions
          %label{for: 'group-discussion-permissions', translate: 'edit_group_form.advanced_settings.permissions'}
          .checkbox
            %label{for: 'group-members-can-add-members'}
              %input.edit-group-form__members-can-add-members#group-members-can-add-members{type: 'checkbox', ng-model: 'group.membersCanAddMembers'}
              %span{translate: 'edit_group_form.advanced_settings.members_can_add_members'}
          .checkbox
            %label{for: 'group-members-can-create-subgroups'}
              %input.edit-group-form__members-can-create-subgroups#group-members-can-create-subgroups{type: 'checkbox', ng-model: 'group.membersCanCreateSubgroups'}
              %span{translate: 'edit_group_form.advanced_settings.members_can_create_subgroups'}
          .checkbox
            %label{for: 'group-members-can-start-discussions'}
              %input.edit-group-form__members-can-start-discussions#group-members-can-start-discussions{type: 'checkbox', ng-model: 'group.membersCanStartDiscussions'}
              %span{translate: 'edit_group_form.advanced_settings.members_can_start_discussions'}
          .checkbox
            %label{for: 'group-members-can-edit-discussions'}
              %input.edit-group-form__members-can-edit-discussions#group-members-can-edit-discussions{type: 'checkbox', ng-model: 'group.membersCanEditDiscussions'}
              %span{translate: 'edit_group_form.advanced_settings.members_can_edit_discussions'}
          .checkbox
            %label{for: 'group-members-can-edit-comments'}
              %input.edit-group-form__members-can-edit-comments#group-members-can-edit-comments{type: 'checkbox', ng-model: 'group.membersCanEditComments'}
              %span{translate: 'edit_group_form.advanced_settings.members_can_edit_comments'}
          .checkbox
            %label{for: 'group-members-can-raise-motions'}
              %input.edit-group-form__members-can-raise-motions#group-members-can-raise-motions{type: 'checkbox', ng-model: 'group.membersCanRaiseProposals'}
              %span{translate: 'edit_group_form.advanced_settings.members_can_raise_motions'}
          .checkbox
            %label{for: 'group-members-can-vote'}
              %input.edit-group-form__members-can-vote#group-members-can-vote{type: 'checkbox', ng-model: 'group.membersCanVote'}
              %span{translate: 'edit_group_form.advanced_settings.members_can_vote'}

    .modal-footer
      %button.btn.btn-primary.edit-group-form__submit-button{type: 'submit', translate: 'edit_group_form.submit'}
      %button.btn.btn-warning{ng-click: '$close()', type: 'button', translate: 'common.action.cancel'}
